<div>
  {{#each mappedPosts}}
    <div class="card">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by
        {{User.username}}
        on
        {{format_date createdAt}}
      </div>
      <div class="card-body">
        {{body}}
      </div>
    </div>
  {{/each}}
</div>