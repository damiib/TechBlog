
<div class="card">
        <div class="card-header">
          Edit Post
        </div>
        <div class="card-body">
            <form id="edit">
              <input type="hidden" name="postId" value="{{post.id}}"/>
               
                  <label for="postTitle" class="form-label">Title:</label>
                  <input type="text" class="form-input" name="postTitle" value={{post.title}}>
              
                
                  <label for="postBody" class="form-label">Content:</label>
                  <textarea name="postBody" class="form-input">{{post.body}}</textarea>
             
               
                <button type="submit" class="btn btn-primary">Update Post</button>
                <button type="button" id="deleteBtn" class="btn btn-primary">Delete</button>
              </form>
        </div>
      </div>

<script src="/js/edit.js"></script>
