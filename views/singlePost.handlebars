 <div class="card">
            <div class="card-header">
                <h2>{{post.title}}</h2>
                <p> Posted by
        {{User.username}}
        on
        {{format_date createdAt}}</p>
            </div>
            <div class="card-body">
                {{post.body}}
            </div>
        </div>

        <!-- this card will display any comments that are attahed to the post -->
        {{#if post.Comments}}
        <div class="card">
            <div class="card-header">
                <h2>Comments</h2>
            </div>
            <div class="card-body">
{{#each post.Comments}}
<div>
    <p>
        {{body}}
    </p>
    <p>
        {{User.username}}, {{format_date createdAt}}
    </p>
</div>
{{/each}}
            </div>
        </div>
        {{/if}}

        <!-- this card will allow the user to add a new comment -->

        <form id="new-comment-form" class="card">
            <div class="card-header">
                <h2>Add New Comment</h2>
            </div>
            <div class="card-body">
              <input type="hidden" name="post-id" value='{{post.id}}'>

                        <label for="comment-body" class="form-label">Comment</label>
              
     
                        <textarea name="comment-body" class="form-input"></textarea>


                    <button type="submit" class="btn btn-primary">Submit</button>
                   
            
            </div>
        </form>


    </div>
</body>

</html>
<script src="/js/comment.js"></script>